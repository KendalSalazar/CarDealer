@model List<Make>

<partial name ="_Notifications"></partial> @*Se importa el partial view*@

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of vehicle make</h2>
        </div>
        <div class="col-6 text-end"> 
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Make" asp-action="Create">Create new make</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-dark">
            <th>
                Make
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
            <tr >
                <td>@obj.Name</td>
                <td>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Make" asp-action="Edit" asp-route-id="@obj.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Make" asp-action="Delete" asp-route-id="@obj.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
        
    </tbody>
</table>


